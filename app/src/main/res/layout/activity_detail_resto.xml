<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivityResto">

    <ImageView
        android:id="@+id/btn_back_detail_resto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_back" />

    <ImageView

        android:id="@+id/img_detail_resto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_210sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_380sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_shape">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/judul_detail_resto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/secular_one"
                    android:textColor="@color/coklat"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    tools:text="Haji Maman" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/secular_one"
                    android:text="@string/info"
                    android:textColor="@color/coklat"
                    android:textSize="@dimen/_15ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/ic_clock" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:contentDescription="@string/todo"
                        android:fontFamily="@font/capriola"
                        android:text="Jam Buka"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/waktu_detail_resto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:contentDescription="@string/todo"
                        android:fontFamily="@font/secular_one"
                        android:textSize="@dimen/_12ssp"
                        tools:text="20 Menit" />
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/secular_one"
                    android:text="Deskripsi"
                    android:textColor="@color/coklat"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/deskripsi_detail_resto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/secular_one"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    tools:text=" is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/secular_one"
                    android:text="Alamat"
                    android:textColor="@color/coklat"
                    android:textSize="@dimen/_15ssp" />

                <TextView
                    android:id="@+id/alamat_detail_resto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/secular_one"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    tools:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like)." />

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="@dimen/_20sdp"
                   android:layout_marginTop="@dimen/_10sdp">
                   <ImageView
                       android:layout_marginEnd="@dimen/_23sdp"
                       android:id="@+id/btn_map"
                       android:layout_marginBottom="@dimen/_5sdp"
                       android:layout_toStartOf="@+id/btn_share"
                       android:layout_width="@dimen/_34sdp"
                       android:layout_height="@dimen/_34sdp"
                       android:src="@drawable/ic_map" />

                   <ImageView
                       android:layout_marginBottom="@dimen/_5sdp"
                       android:id="@+id/btn_share"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_width="@dimen/_34sdp"
                       android:layout_height="@dimen/_34sdp"
                       android:layout_alignParentEnd="true"
                       android:src="@drawable/ic_share" />

                   <TextView
                       android:layout_toStartOf="@id/tv_bagikan"
                       android:layout_marginEnd="@dimen/_10sdp"
                       android:layout_below="@+id/btn_map"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Kunjungi"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_12ssp"/>

                   <TextView
                       android:id="@+id/tv_bagikan"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/btn_map"
                       android:layout_marginEnd="@dimen/_15sdp"
                       android:layout_alignParentEnd="true"
                       android:text="Bagikan"
                       android:textColor="@color/black"
                       android:textSize="@dimen/_12ssp" />

               </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>